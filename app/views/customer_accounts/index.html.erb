<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-10">
      <div class="inner-box">
        <div class="page-header" style="margin-top: 0;">
          <span class="h3">My Accounts <span id="account-count" class="badge" style="font-weight: normal;"><%= @accounts.total_count %></span></span>
        </div>

        <div id="accounts-list">
          <%= render 'list', accounts: @accounts %>
        </div>

        <div id="index-paginate">
          <%= paginate @accounts, remote: true %>
        </div>
      </div>
    </div>
  </div>
</div>
