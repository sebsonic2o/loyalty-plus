<div class="panel-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="input-icon"> <i class="glyphicon glyphicon-user"></i>
        <%= f.email_field :email, class: 'form-control email', placeholder: 'Email', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="input-icon"> <i class="glyphicon glyphicon-lock"></i>
        <%= f.password_field :password, class: 'form-control', id: 'user-pass', placeholder: 'Password', autocomplete: 'off' %>
      </div>
    </div>

    <p class="text-alert"><%= alert %></p>

    <div class="form-group">
      <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
